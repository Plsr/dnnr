<h1 class="text-3xl mb-4 mt-8">Your recipes</h1>
<%= link_to 'Add new', new_recipe_path, class: 'text-teal-500 underline' %>
<% if @recipes.present? %>
  <% @recipes.each do |recipe| %>
    <div class="mb-4 Card">
      <h2 class="text-2xl text-teal-500 font-bold">
        <%= link_to recipe.name, recipe_path(recipe) %>
      </h2>
      <p class="text-gray-600"><%= recipe.description %></p>
      <small><%= recipe.created_at %></small>
    </div>
  <% end %>
<% else %>
  <p>No recipes yet</p>
<% end %>
